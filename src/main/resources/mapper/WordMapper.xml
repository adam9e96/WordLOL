<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.adam9e96.wordlol.mapper.WordMapper">

    <!-- EnglishWord 엔티티의 결과 매핑 -->
    <resultMap id="WordResultMap" type="com.adam9e96.wordlol.entity.Word">
        <!-- 기본 키 매핑 -->
        <id property="id" column="id"/>
        <!-- 일반 컬럼 매핑 -->
        <result property="vocabulary" column="vocabulary"/>
        <result property="meaning" column="meaning"/>
        <result property="hint" column="hint"/>
        <result property="difficulty" column="difficulty"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>

        <!-- 연관된 WordBook 객체 매핑 -->
        <association property="wordBook" javaType="com.adam9e96.wordlol.entity.WordBook">
            <!-- WordBook 의 기본키 매핑 (WordBook 클래스에 setId 메소드가 있어야 함) -->
            <id property="id" column="word_book_id"/>
        </association>
    </resultMap>

    <!-- 단어를 추가하는 INSERT 문 -->
    <insert id="save"
            parameterType="com.adam9e96.wordlol.entity.Word"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO word(vocabulary,
                         meaning,
                         hint,
                         difficulty,
                         created_at,
                         updated_at)
        VALUES (#{vocabulary},
                #{meaning},
                #{hint},
                #{difficulty},
                NOW(),
                NOW())
    </insert>
    <update id="update"
            parameterType="com.adam9e96.wordlol.entity.Word">
        UPDATE word
        SET vocabulary = #{vocabulary},
            meaning    = #{meaning},
            hint       = #{hint},
            difficulty = #{difficulty},
            updated_at = NOW()
        WHERE id = #{id}
    </update>


    <!-- id에 해당되는 엔티티 삭제 -->
    <delete id="deleteById">
        DELETE
        FROM word
        WHERE id = #{id}
    </delete>

    <!-- ID로 EnglishWord 조회 쿼리 -->
    <select id="findById" parameterType="long" resultMap="WordResultMap">
        SELECT id,
               vocabulary,
               meaning,
               hint,
               difficulty,
               created_at,
               updated_at,
               word_book_id
        FROM word
        WHERE id = #{id}
    </select>
    <select id="findEnglishWordByHint" resultMap="WordResultMap">
        SELECT hint
        FROM word
        WHERE id = #{id}
    </select>

    <!-- 랜덤 5개 단어 조회 -->
    <select id="findRandom5Words" resultMap="WordResultMap">
        SELECT id,
               vocabulary,
               meaning,
               null as hint,
               difficulty,
               null as created_at,
               null as updated_at
        FROM word
        ORDER BY RAND()
        LIMIT 5
    </select>
    <select id="findAllIds" resultType="java.lang.Long">
        SELECT id
        FROM word
    </select>
    <!-- 최근 5개 단어 조회-->
    <select id="findRecent5Words" resultMap="WordResultMap">
        SELECT id,
               vocabulary,
               meaning,
               hint,
               difficulty,
               created_at,
               null as updated_at
        FROM word
        ORDER BY id DESC
        LIMIT 5
    </select>
    <select id="countAll" resultType="int">
        SELECT COUNT(*)
        FROM word
    </select>
    <select id="findByWordBookId" resultMap="WordResultMap">
        SELECT e.id,
               e.vocabulary,
               e.meaning,
               e.hint,
               e.difficulty,
               e.created_at,
               e.updated_at
        FROM word e
        WHERE e.word_book_id = #{wordBookId}
        ORDER BY e.id DESC /* 최신 단어부터 조회 */
    </select>
    <select id="findAllByWordBookId" resultMap="WordResultMap">
        SELECT e.id,
               e.vocabulary,
               e.meaning,
               e.hint,
               e.difficulty,
               e.created_at,
               e.updated_at
        FROM word e
        WHERE word_book_id = #{wordBookId}
    </select>
    <select id="existsById" resultType="java.lang.Boolean">
        SELECT COUNT(*) > 0
        FROM word
        WHERE id = #{id}
    </select>
    <select id="findAllWithPaging" resultMap="WordResultMap">
        SELECT id,
               vocabulary,
               meaning,
               hint,
               difficulty,
               created_at,
               updated_at
        FROM word
        ORDER BY id DESC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>
    <!-- 전체 단어 수 조회 -->
    <select id="countTotal" resultType="long">
        SELECT COUNT(*)
        FROM word
    </select>


</mapper>
